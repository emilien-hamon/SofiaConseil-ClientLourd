<Window x:Class="SofiaConseil.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Identifiant" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,15"/>
            <TextBlock Text="Mot de passe" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,15"/>
            <Button Content="Login" Width="200" Click="LoginButton_Click"/>
            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
